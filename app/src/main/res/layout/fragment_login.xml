<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="155dp"
        android:layout_height="142dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:text="Welcome"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsbold"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:id="@+id/text_1"/>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="168dp"
        android:layout_height="142dp"
        android:layout_below="@id/text_1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/account" />

    <RelativeLayout
        android:id="@+id/text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_2"
        android:padding="30dp">

        <EditText
            android:id="@+id/enter_uname"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsregular"
            android:hint="Enter Your Username"
            android:paddingLeft="18dp"
            android:backgroundTint="@color/text_edt"
            />
        <EditText
            android:id="@+id/enter_pass"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enter_uname"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsregular"
            android:hint="Enter Your Password"
            android:paddingLeft="18dp"
            android:backgroundTint="@color/text_edt"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password?"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:textColor="@color/button_color"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_pass"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsbold"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/not_have_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/not_have_acc"
            android:textColor="@color/button_color"
            />
    </RelativeLayout>

</RelativeLayout>